<Window x:Class="backgammon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:backgammon"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Button x:Name="player" Content="玩家对战" HorizontalAlignment="Left" Margin="27,21,0,0" VerticalAlignment="Top" Click="Button_Click" Background="{x:Null}" Height="39" Width="82"/>
        <Button x:Name="aiplayer" Content="AI对战" HorizontalAlignment="Left" Margin="148,21,0,0" VerticalAlignment="Top" Click="Button_Click" Background="{x:Null}" Height="39" Width="82"/>
        <Grid HorizontalAlignment="Left" Height="600" Margin="27,95,0,0" VerticalAlignment="Top" Width="600
              ">
            <Canvas x:Name="pan"/>
            <Button x:Name="startButton" Content="构建棋盘" HorizontalAlignment="Center" Margin="0,266,0,0" VerticalAlignment="Top" Height="58" Width="104" Click="drawButton"
                    />
        </Grid>
        <TextBox HorizontalAlignment="Left" Margin="721,95,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="435" Height="365" OverridesDefaultStyle="True" IsReadOnlyCaretVisible="True"/>

    </Grid>
</Window>
